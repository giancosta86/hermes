{
  "name": "@giancosta86/hermes",
  "version": "1.0.2",
  "description": "Minimalist i18n in TypeScript",
  "keywords": [
    "internationalization",
    "i18n",
    "utilities",
    "TypeScript"
  ],
  "homepage": "https://github.com/giancosta86/hermes#readme",
  "bugs": "https://github.com/giancosta86/hermes/issues",
  "license": "MIT",
  "author": {
    "name": "Gianluca Costa",
    "email": "gianluca@gianlucacosta.info",
    "url": "https://gianlucacosta.info/"
  },
  "files": [],
  "main": "dist",
  "types": "dist",
  "repository": "giancosta86/hermes",
  "scripts": {
    "clean": "rimraf dist coverage giancosta86-*.tgz",
    "clean:all": "yarn clean && rimraf node_modules",
    "format": "prettier --write .",
    "prepack": "yarn check-all && yarn build && yarn test:prod",
    "check-all": "yarn check-format && yarn lint && yarn test",
    "check-format": "prettier --check .",
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx,.cjs,.mjs",
    "test": "jest",
    "test:watch": "yarn test --watch",
    "test:coverage": "yarn test --coverage",
    "build": "yarn compile-ts",
    "compile-ts": "tsc",
    "test:prod": "jest dist --testPathIgnorePatterns=/_.+",
    "watch": "yarn compile-ts --watch"
  },
  "dependencies": {
    "@giancosta86/time-utils": "^2.0.0",
    "@rimbu/collection-types": "^0",
    "@rimbu/hashed": "^0",
    "@rimbu/proximity": "^0",
    "@rimbu/stream": "^0"
  },
  "devDependencies": {
    "@swc/core": "^1.3.58",
    "@swc/jest": "^0.2.26",
    "@types/jest": "^29.5.1",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "eslint": "^8.40.0",
    "jest": "^29.5.0",
    "jest-extended": "^3.2.4",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=16.16.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
