{
  "name": "@giancosta86/hermes",
  "version": "2.0.0-alpha.2",
  "type": "module",
  "description": "Minimalist i18n in TypeScript",
  "keywords": [
    "internationalization",
    "i18n",
    "utilities",
    "TypeScript"
  ],
  "homepage": "https://github.com/giancosta86/hermes#readme",
  "bugs": "https://github.com/giancosta86/hermes/issues",
  "license": "MIT",
  "author": {
    "name": "Gianluca Costa",
    "email": "gianluca@gianlucacosta.info",
    "url": "https://gianlucacosta.info/"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "giancosta86/hermes",
  "scripts": {
    "clean": "rimraf dist coverage giancosta86-*.tgz",
    "clean:all": "yarn clean && rimraf node_modules",
    "format": "prettier --write .",
    "prepack": "yarn check-all && yarn build && yarn test:prod",
    "check-all": "yarn check-format && yarn lint && yarn test",
    "check-format": "prettier --check .",
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx,.cjs,.mjs",
    "test": "vitest run",
    "test:watch": "yarn test --watch",
    "test:coverage": "yarn test --coverage",
    "build": "yarn compile-ts",
    "compile-ts": "tsc",
    "test:prod": "cross-env NODE_ENV=production yarn test",
    "watch": "yarn compile-ts --watch"
  },
  "dependencies": {
    "@giancosta86/time-utils": "^3.0.0-alpha.4",
    "@rimbu/collection-types": "^1.0.0",
    "@rimbu/hashed": "^1.0.0",
    "@rimbu/proximity": "^1.0.0",
    "@rimbu/stream": "^1.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "@vitest/coverage-v8": "^0.33.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.45.0",
    "jest-extended": "^4.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "typescript": "^5.1.6",
    "vitest": "^0.33.0"
  },
  "engines": {
    "node": ">=16.16.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
